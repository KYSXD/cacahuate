<?xml version="1.0" encoding="UTF-8"?>
<process-spec>
  <process-info>
    <author>OgAstorga</author>
    <date>2018-04-07</date>
    <name>Validar identidad</name>
    <description>This process asks for a file</description>
    <public>true</public>
  </process-info>
  <process>
    <action id="document_node" >
      <auth-filter backend="anyone"></auth-filter>
      <form-array>
        <form id="doc_form">
          <input
            type="file"
            provider="doqer"
            label="Documento de identidad oficial"
            name="identity_card"
            required="required"
          />
        </form>
      </form-array>
    </action>
  </process>
</process-spec>
