<process-spec>
  <process-info>
    <author>categulario</author>
    <date>2018-04-10</date>
    <name>Cyclic Process</name>
    <public>false</public>
    <description>Smallest Cyclic process</description>
  </process-info>
  <process>
    <action id="start-node" >
      <form-array>
        <form id="work">
          <input type="text" name="task"></input>
        </form>
      </form-array>
    </action>

    <action id="approval-node" >
      <form-array>
        <form id="validate-simple">
          <input type="approval">
            <dependencies>
              <dep>work.task</dep>
            </dependencies>
          </input>
        </form>
      </form-array>
    </action>
  </process>
</process-spec>
