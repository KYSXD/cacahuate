<?xml version="1.0" encoding="UTF-8"?>
<process-spec>
  <process-info>
    <author>categulario</author>
    <date>2018-04-26</date>
    <name>Decision</name>
    <public>true</public>
    <description>A process for testing of various decision mechanisms</description>
  </process-info>
  <process>
    <action id="start-node" >
      <form-array>
        <form id="start-form">
          <input type="select" name="should_exec" required="required" label="Should exec?">
            <option value="yes">Yes</option>
            <option value="no">No</option>
          </input>
        </form>
      </form-array>
    </action>

    <action id="mid-node" >
      <condition>#start-form.should_exec == "yes"</condition>
      <form-array>
        <form id="mid-form">
          <input type="text" name="data" required="required" />
        </form>
      </form-array>
    </action>
  </process>
</process-spec>
