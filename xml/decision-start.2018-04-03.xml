<process-spec>
  <process-info>
    <author>OgAstorga</author>
    <date>2018-04-03</date>
    <name>La decisión</name>
    <description>Proceso que inicia con una decisión</description>
    <public>true</public>
  </process-info>
  <process>
    <node id="decision-node" class="decision">
      <form-array>
        <form id="auth-form">
          <input type="radio" name="auth" required="required">
            <option value="yes">Ándale mijito, ve</option>
            <option value="no">Ni madres</option>
          </input>
        </form>
      </form-array>
    </node>

    <node id="ans-yes" class="end">
      <condition>#auth-form.auth=="yes"</condition>
    </node>

    <node id="ans-no" class="end">
      <condition>#auth-form.auth=="no"</condition>
    </node>
  </process>
</process-spec>
