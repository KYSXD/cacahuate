<process-spec>
  <process-info>
    <author>OgAstorga</author>
    <date>2018-04-03</date>
    <name>La decisión</name>
    <description>Proceso que inicia con una decisión</description>
    <public>true</public>
    <start-node>decision-node</start-node>
  </process-info>
  <process>
    <node id="decision-node" class="decision async">
      <form-array>
        <form id="auth-form">
          <input type="radio" name="auth" required="required">
            <option value="yes">Ándale mijito, ve</option>
            <option value="no">Ni madres</option>
          </input>
        </form>
      </form-array>
    </node>

    <connector from="decision-node" to="confirm-node">
      <condition>form#auth-form[auth]=="yes"</condition>
    </connector>

    <node id="confirm-node" class="end" />

    <connector from="decision-node" to="denegate-node">
      <condition>form#auth-form[auth]=="no"</condition>
    </connector>

    <node id="denegate-node" class="end" />
  </process>
</process-spec>
