<process-spec>
  <process-info>
    <author>Og Astorga</author>
    <date>2018-05-17</date>
    <name>Anidated conditions</name>
    <public>false</public>
    <description>anidated conditions</description>
  </process-info>
  <process>
    <action id="a">
      <auth-filter backend="anyone"></auth-filter>
      <form-array>
        <form id="a">
          <input type="text" name="a" />
        </form>
      </form-array>
    </action>

    <if id="outer">
      <condition>a.a > "0"</condition>
      <block>
        <action id="b">
          <auth-filter backend="backref">
            <param name="identifier" type="ref">user#a</param>
          </auth-filter>
          <form-array>
            <form id="b">
              <input type="text" name="b" />
            </form>
          </form-array>
        </action>

        <if id="inner1">
          <condition>b.b > "0"</condition>
          <block>
            <action id="c">
              <auth-filter backend="backref">
                <param name="identifier" type="ref">user#a</param>
              </auth-filter>
              <form-array>
                <form id="c">
                  <input type="text" name="c" />
                </form>
              </form-array>
            </action>

            <if id="inner2">
              <condition>c.c > "0"</condition>
              <block>
                <action id="d">
                  <auth-filter backend="backref">
                    <param name="identifier" type="ref">user#a</param>
                  </auth-filter>
                  <form-array>
                    <form id="d">
                      <input type="text" name="d" />
                    </form>
                  </form-array>
                </action>
              </block>
            </if>

            <action id="e">
              <auth-filter backend="backref">
                <param name="identifier" type="ref">user#a</param>
              </auth-filter>
              <form-array>
                <form id="e">
                  <input type="text" name="e" />
                </form>
              </form-array>
            </action>
          </block>
        </if>

        <action id="f">
          <auth-filter backend="backref">
            <param name="identifier" type="ref">user#a</param>
          </auth-filter>
          <form-array>
            <form id="f">
              <input type="text" name="f" />
            </form>
          </form-array>
        </action>
      </block>
    </if>

    <action id="g">
      <auth-filter backend="backref">
        <param name="identifier" type="ref">user#a</param>
      </auth-filter>
    </action>
  </process>
</process-spec>
